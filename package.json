{
  "name": "Easy",
  "version": "0.1.0",
  "description": "Easy.js Rest API framework",
  "main": "src/app.js",
  "repository": "https://jsergent-prepapp@bitbucket.org/prepapp/easy.js.git",
  "scripts": {
    "build": "babel src -d build",
    "build:all": "npm run build:bin && npm run build",
    "build:all:once": "npm run build:bin && npm run build:once",
    "build:bin": "npm run make:bin && babel src/bin/bundles/new -o build/bin/bundles/new && babel src/bin/bundles/routes -o build/bin/bundles/routes && babel src/bin/bundles/tests -o build/bin/bundles/tests && babel src/bin/database/import -o build/bin/database/import && babel src/bin/database/migrate -o build/bin/database/migrate && babel src/bin/lib/tests -o build/bin/lib/tests && babel src/bin/services/tests -o build/bin/services/tests",
    "build:watch": "babel -w src -d build",
    "bundles:routes": "node build/bin/bundles/routes",
    "clean:build": "rm -rf build/* ",
    "clean:logs": "rm -rf logs/*.log",
    "db:migrate": "node build/bin/database/migrate",
    "db:import": "node build/bin/database/import",
    "debug": "node --expose-gc debug build/app.js",
    "generate:doc": "apidoc -i src/ -e skeleton/ -o doc/",
    "make:bin": "node make-bin",
    "new:bundle": "node build/bin/bundles/new",
    "postinstall": "npm run build:all:once",
    "start": "nodemon -w build --expose-gc build/app.js",
    "start:forever": "node --expose-gc build/app.js > stdout.txt 2> stderr.txt &",
    "test": "npm run test:bundles && npm run test:lib && npm run test:services",
    "test:bundles": "node build/bin/bundles/tests",
    "test:lib": "node build/bin/lib/tests",
    "test:services": "node build/bin/services/tests"
  },
  "keywords": [
    "node",
    "js",
    "api",
    "rest",
    "restful",
    "framework",
    "fullstack",
    "javascript",
    "easy",
    "easyjs",
    "server",
    "es6",
    "es2015",
    "backend"
  ],
  "author": "Julien Sergent",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.2",
    "bookshelf": "^0.10.2",
    "colors": "^1.1.2",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "helmet": "^2.3.0",
    "https": "~1.0.0",
    "jsonwebtoken": "^7.1.9",
    "knex": "~0.12.2",
    "lodash": "~4.16.3",
    "minimist": "^1.2.0",
    "mongoose": "^4.6.3",
    "morgan": "~1.7.0",
    "mysql": "~2.11.1",
    "numeral": "^1.5.3",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "readline-sync": "^1.4.4",
    "when": "~3.7.7"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "babel-root-import": "^4.1.3",
    "execsql": "0.0.3",
    "mkdirp": "^0.5.1",
    "mocha": "~3.1.0",
    "pad-right": "^0.2.2",
    "unit.js": "^2.0.0",
    "walk": "^2.3.9"
  }
}
