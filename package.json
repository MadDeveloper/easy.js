{
  "name": "Easy",
  "version": "0.1.0",
  "description": "Easy.js Rest API framework",
  "main": "src/app.js",
  "repository": "https://jsergent-prepapp@bitbucket.org/prepapp/easy.js.git",
  "scripts": {
    "build": "npm run build-bin && babel -w src/ -d build/",
    "build-bin": "npm run make-build && babel src/bin/bundles/new -o build/bin/bundles/new && babel src/bin/bundles/tests -o build/bin/bundles/tests && babel src/bin/database/import -o build/bin/database/import && babel src/bin/database/migrate -o build/bin/database/migrate && babel src/bin/database/startup -o build/bin/database/startup && babel src/bin/lib/tests -o build/bin/lib/tests && babel src/bin/services/tests -o build/bin/services/tests",
    "build-maps": "babel -w src/ -d build/ -s",
    "clean-build": "rm -rf build/* && npm run make-build",
    "clear-logs": "rm -rf logs/*.log",
    "db-migrate": "node build/bin/database/migrate",
    "db-import": "node build/bin/database/import",
    "db-startup": "node build/bin/database/startup",
    "db-startup-lite": "node build/bin/database/startup --lite",
    "debug": "node --expose-gc debug build/app.js",
    "make-build": "node make-build",
    "new-bundle": "node build/bin/bundles/new",
    "postinstall": "npm run build",
    "preinstall": "npm i -g --unsafe-perm babel-cli",
    "start": "node --expose-gc build/app.js",
    "start-demon": "nodemon --expose-gc build/app.js",
    "start-demon-log": "nodemon --expose-gc build/app.js --log",
    "start-log": "node --expose-gc build/app.js --log",
    "start-prod": "node --expose-gc build/app.js --prod",
    "start-prod-log": "node --expose-gc build/app.js --prod --log",
    "start-forever": "node --expose-gc build/app.js --prod > stdout.txt 2> stderr.txt &",
    "start-forever-log": "node --expose-gc build/app.js --prod --log > stdout.txt 2> stderr.txt &",
    "start-forever-dev": "node --expose-gc build/app.js > stdout.txt 2> stderr.txt &",
    "start-forever-dev-log": "node --expose-gc build/app.js --log > stdout.txt 2> stderr.txt &",
    "test": "npm run test-bundles && npm run test-lib && npm run test-services",
    "test-bundles": "node build/bin/bundles/tests",
    "test-lib": "node build/bin/lib/tests",
    "test-services": "node build/bin/services/tests",
    "push": "git add --all && git commit -m \"Refactoring\" && git push"
  },
  "keywords": [
    "node",
    "js",
    "api",
    "rest",
    "restful",
    "framework",
    "fullstack",
    "javascript",
    "easy",
    "easyjs"
  ],
  "author": "Julien Sergent",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.1",
    "bookshelf": "^0.9.5",
    "colors": "^1.1.2",
    "compression": "^1.6.0",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "helmet": "^2.1.0",
    "https": "~1.0.0",
    "jsonwebtoken": "^7.0.0",
    "knex": "~0.11.5",
    "lodash": "~4.13.1",
    "minimist": "^1.2.0",
    "morgan": "~1.7.0",
    "mysql": "~2.10.2",
    "numeral": "^1.5.3",
    "readline-sync": "^1.3.0",
    "when": "~3.7.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "execsql": "0.0.3",
    "mkdirp": "^0.5.1",
    "mocha": "~2.5.3",
    "unit.js": "^2.0.0",
    "walk": "^2.3.9"
  }
}
