root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[{*.yml}]
indent_style = space
indent_size = 4
insert_final_newline = false

# Matches the exact files either package.json or .travis.yml
[{*.json,*.md}]
indent_style = space
indent_size = 2
insert_final_newline = false
